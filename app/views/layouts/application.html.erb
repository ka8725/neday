          </ul>
        </nav>
      </section>
      <section class='bordered'>
        <header>
          <h3>Зачетный сайт</h3>
        </header>
        <nav>
          <ul>
            <li>
              <div class="fb-like" data-href="http://neday.org" data-send="false" data-layout="button_count" data-width="240" data-show-faces="false" data-action="recommend" data-font="arial"></div>
            </li>
            <li>
              <g:plusone size="tall" annotation="inline" width="240"></g:plusone>
            </li>
            <li>
              <div id="vk_like"></div>
            </li>
          </ul>
        </nav>
      </section>
    </section>
    <%= yield %>
    <section class='side right'>
      <section class='bordered'>
        <header>
          <h3>Последние События</h3>
