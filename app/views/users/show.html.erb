<div class='well'>
  <header>
     <div class='row'>
       <div class='span1'></div>
       <div class='span1'>
         <%= image_tag @user.avatar %>
       </div>
       <div class='span6'>
         <h2><%= @user.name %></h2>
       </div>
         <div class='span1'><%= link_to 'Редактировать', edit_user_path(@user) %></div>
     </div>
  </header>
  <hr>
  <section>
    <div class='row'>
      <div class='span4'>
        <strong>Контакты</strong>
      </div>
      <div class='span4'>
        <strong>Место обитания</strong>
        <address>
          <%= @user.address %></br>
          <%= @user.city %></br>
        </address>
        <%= render_map(@user.location) %>
      </div>
    </div>
  </section>
</div>
