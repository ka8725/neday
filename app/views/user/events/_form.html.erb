<%= simple_form_for [:user, @event], :html => { :class => "form-horizontal" } do |f| %>
  <div class="well">
    <div class="page-header"><h1>Создание нового события</h1></div>
    <%= f.association :sport, :prompt => 'Выберите' %>
    <%= f.simple_fields_for :place, :build_association => true do |fp| %>
      <%= fp.input :name, :placeholder => 'Название места' %>
      <%= fp.file_field :icon %>
      <%= fp.simple_fields_for :location, :build_association => true do |fl| %>
        <%= fl.input :address, :placeholder => 'Место проведения' %>
      <% end %>
    <% end %>
    <%= f.input :start_at, :input_html => {:class => 'datepicker'}, :as => :string, :placeholder => 'Дата' %>
    <div class="form-actions">
      <%= link_to 'Создать', 'submit', :class => 'btn btn-primary' %>
      <%= link_to 'Отмена', user_path(current_user), :class => 'btn btn-danger' %>
    </div>
  </div>
<% end %>
