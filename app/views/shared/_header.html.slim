.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a.btn.btn-navbar data-target='.nav-collapse' data-toggle='collapse'
        span.i-bar
        span.i-bar
        span.i-bar
      = link_to 'Neday', root_path, :class => 'brand'
      .container.nav-collapse
        = render_navigation :context => :main
        p.navbar-text.pull-right
          - if user_signed_in?
            = "Привет, #{link_to current_user.first_name, current_user}".html_safe
          - else
            = link_to 'Войти', new_session_path(:user)
