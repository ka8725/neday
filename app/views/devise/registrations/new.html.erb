<div class='span5 well'>
  <h2><%= t('devise.form.sign_up') %></h2>
  <hr>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'big-fields'}) do |f| %>
    <%= f.input :first_name, :as => :hidden %>
    <%= f.input :last_name, :as => :hidden %>
    <%= f.input :facebook_id, :as => :hidden %>
    <%= f.input :vkontakte_id, :as => :hidden %>
    <%= f.input :twitter_id, :as => :hidden %>
    <%= f.input :google_id, :as => :hidden %>
    <%= f.input :remote_avatar_url, :as => :hidden %>
    <%= f.simple_fields_for :location do |fl| %>
      <%= fl.input :address, :as => :hidden %>
    <% end %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <div class='centered'>
      <%= f.submit 'Создать аккаунт', :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "links" %>
</div>
